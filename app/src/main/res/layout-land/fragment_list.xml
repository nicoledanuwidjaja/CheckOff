<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_title_label"
            style="?android:listSeparatorTextViewStyle"/>

        <EditText android:id="@+id/list_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
                  android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                  android:hint="@string/list_title_hint"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_details_label"
            style="?android:listSeparatorTextViewStyle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <Button android:id="@+id/list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_weight="2"/>

            <CheckBox android:id="@+id/list_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                      android:layout_weight="1"
                android:text="@string/list_completed_label"/>

        </LinearLayout>
</LinearLayout>